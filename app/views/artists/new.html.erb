<div class="container">
  <h1 class="text-center"> Sign up as a new Artist </h1>

  <%= form_with url: "/artists", method: :post, local: true, data: {turbo: false} do |form|%>
    <div class="form-group">
      <%= form.label :name, "Name:" %>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">
      <%= form.label :email, "Email:" %>
      <%= form.text_field :email %>
    </div>
    
    <div class="form-group">
      <%= form.label :email_confirmation, "Email Confirmation:" %>
      <%= form.text_field :email_confirmation %>
    </div>
    
    <div class="form-group">
      <%= form.label :password, "Password:" %>
      <%= form.text_field :password %>
    </div>
    
    <div class="form-group">
      <%= form.label :password_confirmation, "Password Confirmation:" %>
      <%= form.text_field :password_confirmation %>
    </div>
    
    <div class="form-group">
      <%= form.label :location, "Address:" %>
      <%= form.text_field :location %>
    </div>

    <div class="form-group">
    <%= form.label :scheduling_link "Link for Scheduling" %>
    <%= form.text_field :location, value: @artist.scheduling_link %><br>
    </div>

    <% @identities.each do |identity| %>
        <%= check_box_tag "identities[]", identity.id, id: "identity_#{identity.id}", multiple: true %>
        <%= label_tag "identity_#{identity.id}", identity.label %><br>
      <% end %>

    <%= form.submit "Create New Account", class: "btn btn-primary" %>
  <% end %>
</div>