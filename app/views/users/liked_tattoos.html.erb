<div class="container">
  <h1 class="text-center"><%= @user.name %>'s Liked Tattoos</h1>

  <%= render partial: "shared/nav_user" %>

  <section class="user-liked-tattoos">
    <% @tattoos.each do |tattoo| %>
      <div class="liked-tattoo">
        <img src="<%= tattoo.image_url %>" style="max-width: 100%; max-height: 350px;"><br>

        <div class="remove-button">
          <%= button_to "Remove", user_tattoo_path(user_id: @user.id, id: tattoo.id), method: :delete %>
        </div>

        <table class="table">
          <tr>
            <th>Cost:</th>
            <td><%= tattoo.price %></td>
          </tr>
          <tr>
            <th>Duration:</th>
            <td><%= tattoo.time_estimate %> min</td>
          </tr>
        </table>

        <p><%= button_to "Schedule Appointment" %></p>
      </div>
    <% end %>
  </section>

  <%= button_to 'Sign Out', sign_out_path, method: :delete %>
</div>
