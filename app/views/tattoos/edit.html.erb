<div class="container">
  <h1>Edit a Tattoo</h1>

  <div id="tattoo-<%= @tattoo.id %>" class="tattoo_option">
    <img src="<%= @tattoo.image_url %>" style="max-width: 100%; height: auto;">
  </div>

  <%= render partial: "shared/nav_artist" %>

  <%= form_with url: "/artists/#{@artist.id}/tattoos/#{@tattoo.id}", method: :patch, local: true, data: {turbo: false} do |f| %>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control", value: @tattoo.price %>
    </div>

    <div class="form-group">
      <%= f.label :time_estimate %>
      <%= f.text_field :time_estimate, class: "form-control", value: @tattoo.time_estimate %> hours
    </div>

    <div class="form-group">
      <%= f.label :image, "Upload New Image" %>
      <%= f.file_field :img_file, class: "form-control" %>
    </div>

    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>

  <%= button_to 'Sign Out', sign_out_path, method: :delete, class: "btn btn-secondary" %>
</div>
